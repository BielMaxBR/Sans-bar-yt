{
    "manifest_version": 3,
    "name": "Sans dançando na barra do YouTube™",
    "short_name": "sans bar YT",
    "version": "1.19",
    "description": "joga as bad times pra cima e rebola",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon32.png"
    },
    "content_scripts": [
        {
            "css": [
                "sans.css"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["gif/*"],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}